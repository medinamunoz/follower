
<p id="notice"><%= notice %></p>

<p>
  <strong>Description:</strong>
  <%= @summary.description %>
</p>

<p>
  <strong>Note:</strong>
  <%= @summary.note %>
</p>

<p>
  <strong>Resolution:</strong>
  <%= @summary.resolution %>
</p>
<h2>Fase</h2>
<ul>
    <% @summary.phases.each do |phase| %>
      <li><%= phase.name %> <span class="badge info"> <%= link_to "x", delete_phase_summary_path(@summary, phase_id: phase.id) %> </span>
      </li>
    <% end %>
</ul>


<p>
  <strong>Starting day:</strong>
  <%= @summary.starting_day %>
</p>

<p>
  <strong>Close day:</strong>
  <%= @summary.close_day %>
</p>



<% if can? :edit, @summary %>
  <%= link_to 'Edit', edit_summary_path(@summary) %> |
<% end %>
<%= link_to 'Back', summaries_path %>
