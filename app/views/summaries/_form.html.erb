<%= form_for(setup_summary(@summary), 
    :url => @summary.persisted? ? summary_path : summaries_path) do |f| %>
  <% if summary.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(summary.errors.count, "error") %> prohibited this summary from being saved:</h2>

      <ul>
      <% summary.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Descripción %>
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :Resolución %>
    <%= f.number_field :resolution %>
  </div>




  <div class="field">
    <%= f.label :phases_ids, "Fases" %><br>
    <%= collection_check_boxes(:summary, :phases_ids, Phase.all, :id, :name) %>
  </div>


  <div class="field">
    <%= f.label :Incio %>
    <%= f.datetime_select :starting_day %>
  </div>

  <div class="field">
    <%= f.label :Termino %>
    <%= f.datetime_select :close_day %>
  </div>

  <div class="field">
    <%= f.label :note %>
    <%= f.text_area :note %>
  </div>



  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
