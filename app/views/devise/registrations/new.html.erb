<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">  
      <div class="well">
          <h2>Registro</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <div class="form-group">
              <div class="field">
                  <%= f.label :Nombre %><br />
                  <%= f.text_field :name, autofocus: true, :class =>'form-control', placeholder:"Ingrese nombre" %>
              </div>
            </div>

            <div class="form-group">
              <div class="field">
                <%= f.label :Apellido_Paterno %><br />
                <%= f.text_field :sure_name, :class =>'form-control', placeholder:"Ingrese Apellido Paterno" %>
              </div>
            </div>

            <div class="form-group">
              <div class="field">
                <%= f.label :Apellido_Materno %><br />
                <%= f.text_field :last_name, :class =>'form-control', placeholder:"Ingrese Apellido Materno" %>
              </div>
            </div>

            <div class="form-group">
              <div class="field">
                <%= f.label :RUT %><br />
                <%= f.text_field :rut, :class =>'form-control', placeholder:"Ingrese RUT" %>
              </div>
            </div>

            <div class="form-group">
              <div class="field">
                <%= f.label :email %><br />
                <%= f.email_field :email, :class =>'form-control', placeholder:"Ingrese Email" %>
              </div>
            </div>


          <!-- quiero agregar el departamento -->
            
            <div class="field">
              <%= f.label :department_id, "Departamento" %><br />
              <%= f.grouped_collection_select :department_id, Establishment.order(:name), :departments, :name, :id, :name, include_blank: "Seleccione un departamento" %>
            </div>



            <div class="form-group">
              <div class="field">
                <%= f.label :Ingrese_Password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "off", :class =>'form-control', placeholder:"Ingrese Contraseña" %>
              </div>
            </div>

            <div class="form-group">
              <div class="field">
                <%= f.label :Confirma_Password %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off", :class =>'form-control', placeholder:"Confirme Contraseña" %>
              </div>
            <div>

            <div class="actions">
              <%= f.submit "Registrar", :class => 'btn btn-primary' %>
            </div>
          <% end %>

        </div>
      </div>
    </div>
</div>